<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"  parent="@android:style/Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="FontWelcome25">
        <item name="android:textSize">@dimen/space_50</item>
        <item name="android:textColor">#9e5da3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontNormal15">
        <item name="android:textSize">@dimen/space_15</item>
        <item name="android:textColor">#202020</item>
    </style>

    <style name="FontNormal20">
        <item name="android:textSize">@dimen/space_20</item>
        <item name="android:textColor">#202020</item>
    </style>

    <style name="FontGray15">
        <item name="android:textSize">@dimen/space_15</item>
        <item name="android:textColor">@color/clr_graqy</item>
    </style>

    <style name="FontToggle">
        <item name="android:textSize">@dimen/space_15</item>
        <item name="android:textColor">@drawable/clr_toggle</item>
    </style>

    <style name="FontWhite20">
        <item name="android:textSize">@dimen/space_20</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="FontWhiteBold20">
        <item name="android:textSize">@dimen/space_20</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="FontWhite15">
        <item name="android:textSize">@dimen/space_15</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="FontBlue15">
        <item name="android:textSize">@dimen/space_15</item>
        <item name="android:textColor">@color/clr_loginback</item>
    </style>
    <style name="FontGreen15">
        <item name="android:textSize">@dimen/space_15</item>
        <item name="android:textColor">@color/clr_green</item>
    </style>
    <style name="FontBlueBold15">
        <item name="android:textSize">@dimen/space_15</item>
        <item name="android:textColor">@color/clr_loginback</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="captureTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/clr_lightgraqy</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="LeftMenuItem">
        <item name="android:paddingLeft">@dimen/padding_normal</item>
        <item name="android:paddingRight">@dimen/padding_normal</item>
        <item name="android:paddingTop">@dimen/padding_snormal</item>
        <item name="android:paddingBottom">@dimen/padding_snormal</item>
        <item name="android:background">@drawable/bt_top_back</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">start|center</item>
    </style>
    <style name="LeftMenuText">
        <item name="android:paddingLeft">@dimen/padding_normal</item>
        <item name="android:textSize">@dimen/fontsize_xsmall</item>
        <item name="android:textColor">@color/leftmenu</item>
    </style>
</resources>
